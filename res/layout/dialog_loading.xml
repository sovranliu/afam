<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loading_layout_background"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_gravity="center"
    android:background="@drawable/background_loading">
    <LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerInParent="true"
	    android:orientation="vertical">
	    <RelativeLayout
	        android:id="@+id/loading_layout_icon"
		    android:layout_width="60dp"
		    android:layout_height="60dp"
	    	android:orientation="vertical"
		    android:layout_gravity="center">
			<ImageView 
		        android:id="@+id/loading_image_circle" 
				android:layout_height="60dp" 
		        android:layout_width="60dp"
		        android:layout_centerInParent="true"
		        android:scaleType="fitCenter"
		        android:src="@drawable/loading_circle">
			</ImageView>
			<ImageView 
		        android:id="@+id/loading_image_icon" 
				android:layout_height="35dp" 
		        android:layout_width="35dp"
		        android:layout_centerInParent="true"
		        android:scaleType="fitCenter"
		        android:src="@drawable/loading_icon">
			</ImageView>
	    </RelativeLayout>
		<TextView
	        android:id="@+id/loading_label_title"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center"
		    android:textSize="12dip"
		    android:layout_marginTop="6dp"
		    android:text="加载中"
		    android:visibility="gone" >
		</TextView>
    </LinearLayout>
</RelativeLayout>
